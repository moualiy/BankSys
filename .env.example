# ============================================
# Bank System - Environment Variables Template
# ============================================
# Copy this file to `.env` or `.env.development` for local development
# Or `.env.production` for production deployment
# 
# For Docker Compose:
#   - Development: cp .env.development .env
#   - Production: cp .env.production .env
#

# ============================================
# ASP.NET Core Configuration
# ============================================
# Environment: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development

# URLs for the API server
ASPNETCORE_URLS=http://+:8080

# ============================================
# SQL Server Configuration
# ============================================
# SQL Server database name
SQL_DATABASE=Bank

# SQL Server SA (System Administrator) user
SQL_USER=sa

# SQL Server SA password (change in production!)
SQL_PASSWORD=sa123456

# SQL Server connection string (for Docker, use 'sqlserver' as hostname)
ConnectionStrings__Default=Server=sqlserver,1433;Database=Bank;User Id=sa;Password=sa123456;TrustServerCertificate=True;

# MSSQL specific variables
MSSQL_SA_PASSWORD=sa123456
MSSQL_PID=Developer
ACCEPT_EULA=Y

# ============================================
# Port Mappings (Host:Container)
# ============================================
# SQL Server port (container always 1433, map to this host port)
SQL_PORT=1433

# Backend API port (container always 8080, map to this host port)
BACKEND_PORT=5000

# Frontend port (container always 3000, map to this host port)
FRONTEND_PORT=3000

# ============================================
# Frontend Configuration
# ============================================
# API URL for frontend to use (from user's browser perspective)
REACT_APP_API_URL=http://localhost:5000

# Alternative: from Docker network perspective
# REACT_APP_API_URL=http://backend:8080

# ============================================
# Database Backup/Restore
# ============================================
# Path to backup file on host machine
SQL_BACKUP_PATH=./db/Bank_backup.bak

# Database name for restoration
SQL_RESTORE_DATABASE=Bank

# ============================================
# Frontend API Configuration
# ============================================
# Base URL for API calls in frontend
FRONTEND_API_BASE_URL=http://localhost:5000

# ============================================
# Development/Debug Flags
# ============================================
# Enable debug logging
DEBUG=true

# Enable Swagger/OpenAPI documentation
ENABLE_SWAGGER=true

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5167,http://localhost:5000,http://frontend:3000

# ============================================
# Docker Internal Configuration
# ============================================
# Service names used inside Docker network
DOCKER_BACKEND_HOST=backend
DOCKER_DATABASE_HOST=sqlserver
DOCKER_DATABASE_PORT=1433

# ============================================
# Image Names
# ============================================
DOCKER_IMAGE_BACKEND=banksystem-api:latest
DOCKER_IMAGE_FRONTEND=banksystem-frontend:latest
DOCKER_IMAGE_DATABASE=mcr.microsoft.com/mssql/server:2022-latest
